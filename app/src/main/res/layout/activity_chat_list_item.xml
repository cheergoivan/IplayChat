<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    tools:context=".ui.activity.ChatListActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_chat_list_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/avatar1"
        />

    <TextView
        android:id="@+id/activity_chat_list_user"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="happyfriend8"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/activity_chat_list_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/activity_chat_list_says"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="happyfriend8999999"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/activity_chat_list_avatar"
        app:layout_constraintTop_toBottomOf="@+id/activity_chat_list_user" />

    <TextView
        android:id="@+id/activity_chat_list_unread_messages_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="99"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:background="@drawable/style_message_notification"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
